<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eecs1022.lab4.Lab4Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Client 1:"
        android:id="@+id/labelClient1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="40dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputClient1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/labelClient1"
        android:layout_alignBottom="@+id/labelClient1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Balance of Client1:"
        android:id="@+id/labelClient1Amount"
        android:layout_below="@+id/labelClient1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="35dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputClient1Amount"
        android:layout_below="@+id/labelClient1"
        android:layout_toRightOf="@+id/labelClient1Amount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number|numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Client 2:"
        android:id="@+id/labelClient2"
        android:height="35dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/inputClient1Amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputClient2"
        android:layout_toRightOf="@+id/labelClient2"
        android:layout_alignBottom="@+id/labelClient2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Balance of Client2:"
        android:id="@+id/labelClient2Amount"
        android:layout_below="@+id/labelClient2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="35dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputClient2Amount"
        android:layout_below="@+id/labelClient2"
        android:layout_toRightOf="@+id/labelClient2Amount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number|numberDecimal"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Client 3:"
        android:id="@+id/labelClient3"
        android:height="35dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/inputClient2Amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputClient3"
        android:layout_toRightOf="@+id/labelClient3"
        android:layout_alignBottom="@+id/labelClient3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Balance of Client3:"
        android:id="@+id/labelClient3Amount"
        android:layout_below="@+id/labelClient3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="35dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputClient3Amount"
        android:layout_below="@+id/labelClient3"
        android:layout_toRightOf="@+id/labelClient3Amount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number|numberDecimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Accounts"
        android:id="@+id/buttonCreate"
        android:layout_below="@+id/labelClient3Amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/inputClient3Amount"
        android:layout_alignEnd="@+id/inputClient3Amount"
        android:onClick="inintializeClients"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service:"
        android:id="@+id/labelService"
        android:layout_below="@+id/buttonCreate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerService"
        android:layout_toRightOf="@+id/labelService"
        android:layout_below="@+id/buttonCreate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:entries="@array/service"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Account Owner"
        android:id="@+id/labelFrom"
        android:layout_below="@+id/labelService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFromClient"
        android:layout_alignTop="@+id/labelFrom"
        android:layout_toRightOf="@+id/labelFrom"
        android:layout_alignRight="@+id/spinnerService"
        android:layout_alignEnd="@+id/spinnerService"
        android:entries="@array/clients"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Account Owner:"
        android:id="@+id/labelTo"
        android:layout_below="@+id/labelFrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerToClient"
        android:layout_below="@+id/labelFrom"
        android:layout_toRightOf="@+id/labelTo"
        android:layout_alignRight="@+id/spinnerFromClient"
        android:layout_alignEnd="@+id/spinnerFromClient"
        android:entries="@array/clients"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:id="@+id/labelAmount"
        android:layout_below="@+id/labelTo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputAmount"
        android:layout_alignTop="@+id/labelAmount"
        android:layout_toRightOf="@+id/labelTo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number|numberDecimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Transaction"
        android:id="@+id/buttonComplete"
        android:layout_below="@+id/inputAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/inputAmount"
        android:layout_alignEnd="@+id/inputAmount"
        android:onClick="doAction"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/lableResult"
        android:layout_below="@+id/buttonComplete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"/>

</RelativeLayout>
